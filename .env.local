# Email (SendGrid, etc.)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=[SENDGRID_API_KEY]
# DEFAULT_FROM_EMAIL=noreply@fretamento.com

# Monitoring (Sentry)
# SENTRY_DSN=https://[SENTRY_DSN]

